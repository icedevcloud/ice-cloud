<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaobingby.upms.mapper.SysPermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xiaobingby.upms.entity.SysPermission">
        <result column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="pid" property="pid"/>
        <result column="title" property="title"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="url" property="url"/>
        <result column="perm_code" property="permCode"/>
        <result column="status" property="status"/>
        <result column="sort" property="sort"/>
        <result column="type" property="type"/>
        <result column="hide_in_menu" property="hideInMenu"/>
        <result column="hide_in_bread" property="hideInBread"/>
        <result column="not_cache" property="notCache"/>
        <result column="description" property="description"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_time,
        update_time,
        pid, title, name, path, component, icon, url, perm_code, status, sort, type, hide_in_menu, hide_in_bread, not_cache, description
    </sql>

    <select id="findUserMenus" resultMap="BaseResultMap">
        SELECT * FROM sys_permission WHERE id in (
            SELECT permission_id FROM sys_role_permission WHERE role_id in
            (
                select role_id from sys_user_role WHERE user_id = #{userId}
            )
        ) AND type = 1 ORDER BY sort
    </select>

    <select id="listPermissionByRoleId" resultType="com.xiaobingby.upms.entity.SysPermission">
        SELECT
            *
        FROM
            sys_permission
        WHERE
            id IN ( SELECT permission_id FROM sys_role_permission WHERE type = 2 and role_id = #{roleId} )
    </select>

</mapper>
